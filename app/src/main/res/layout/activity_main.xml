<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".MainActivity"
    tools:ignore="RtlHardcoded,HardcodedText">


        <EditText
            android:id="@+id/out"
            android:layout_above="@+id/post1"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:scrollbars = "vertical"
            android:padding="5dp"
            android:textSize="14sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:editable="false"
            android:gravity="top"
            android:inputType="none" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Clear" />


    <View
        android:id="@+id/center"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


    <Button
        android:id="@+id/post1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_delayed1"
        android:layout_toLeftOf="@+id/center"
        android:text="Post Event1 " />

    <Button
        android:id="@+id/send1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_delayed1"
        android:layout_toRightOf="@+id/center"
        android:text="Send Event1 " />

    <Button
        android:id="@+id/post_delayed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post2"
        android:layout_marginBottom="5dp"
        android:text="Post Delayed Event1 " />

    <Button
        android:id="@+id/post2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_delayed2"
        android:layout_toLeftOf="@+id/center"
        android:text="Post Event2 " />

    <Button
        android:id="@+id/send2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_delayed2"
        android:layout_toRightOf="@+id/center"
        android:text="Send Event2 " />

    <Button
        android:id="@+id/post_delayed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Post Delayed Event2 " />


</RelativeLayout>